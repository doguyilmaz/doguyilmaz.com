---
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import MainContainer from "@components/MainContainer.astro";
import ThemeSwitcher from "@components/ThemeSwitcher.astro";
import { ClientRouter, fade } from "astro:transitions";
import "@fontsource-variable/onest";
import "@fontsource/jetbrains-mono";
import { SEO } from "astro-seo";
import "@styles/global.css";

const { pageTitle, description, type, title } = Astro.props;
---

<html lang="en" class="h-full antialiased">
  <head>
    <SpeedInsights />
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- Mobile theme colors -->
    <meta
      name="theme-color"
      content="#0a0a0a"
      media="(prefers-color-scheme: dark)"
    />
    <meta
      name="theme-color"
      content="#fafafa"
      media="(prefers-color-scheme: light)"
    />

    <!-- iOS status bar -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#18181b" />

    <!-- Android -->
    <meta name="mobile-web-app-capable" content="yes" />

    <!--TODO: Ask for twitter username, and other socials as well -->
    <SEO
      title={pageTitle}
      description={description}
      openGraph={{
        basic: {
          title: description,
          type: type,
          image: "/images/og_image.png",
        },
        image: {
          alt: "An image of myself",
        },
      }}
      twitter={{ creator: "@" }}
    />
    <script
      is:inline
      defer
      data-domain="localhost:4321"
      src="https://platform.twitter.com/widgets.js"
      charset="utf-8"
    ></script>
    <style is:inline>
      :root {
        --tc-padding: 0;
        --tc-border-color: transparent;
      }
      .twitter-tweet:not(iframe) {
        visibility: hidden;
      }
      .twitter-tweet {
        width: 100% !important;
        margin: 0 !important;
      }
    </style>

    <ClientRouter />
    <Analytics />
    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "r0se0rc0rd");
    </script>
  </head>
  <body
    class="h-full text-primary-100 selection:bg-accent-400 selection:text-black"
  >
    <div transition:animate={fade({ duration: "0.5s" })}>
      <MainContainer>
        <slot />
      </MainContainer>
      <ThemeSwitcher />
    </div>
  </body>
</html>
