---
import AboutImage from "@components/AboutImage.astro";
import Experience from "@components/Experience.astro";
import TechStackVisualizer from "@components/TechStackVisualizer.astro";
import CodePlayground from "@components/CodePlayground.astro";
import GitHubActivity from "@components/GitHubActivity.astro";
import AchievementsSection from "@components/AchievementsSection.astro";
import Layout from "@layout/Layout.astro";
import { siteConfig } from "@config/site";

const { about, education } = siteConfig;
---

<Layout
  pageTitle={about.pageTitle}
  description={about.pageDescription}
  type="content"
>
  <main class="px-8 pt-16 mx-auto max-w-6xl sm:pt-24 lg:px-16">
    <div class="flex flex-col space-y-16">
      <!-- Hero Section -->
      <section class="text-center space-y-6">
        <h1
          class="text-4xl md:text-6xl font-bold bg-gradient-to-r from-white via-primary-100 to-primary-300 bg-clip-text text-transparent"
        >
          About Me
        </h1>
        <p class="text-xl text-primary-300 max-w-3xl mx-auto leading-relaxed">
          {about.description}
        </p>
      </section>

      <!-- About Image and Content -->
      <section class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <AboutImage />
        </div>
        <div class="order-1 lg:order-2 space-y-6">
          <h2 class="text-3xl font-bold">{about.content.heading}</h2>
          <div class="space-y-4">
            {
              about.content.paragraphs.map((paragraph) => (
                <p class="text-primary-300 leading-relaxed">{paragraph}</p>
              ))
            }
          </div>

          <!-- Quick Stats -->
          <div class="grid grid-cols-2 gap-4 mt-8">
            <div
              class="bg-lightercontentbackground border border-primary-600 rounded-lg p-4 text-center"
            >
              <div class="text-2xl font-bold text-primary-100">5+</div>
              <div class="text-sm text-primary-300">Years Experience</div>
            </div>
            <div
              class="bg-lightercontentbackground border border-primary-600 rounded-lg p-4 text-center"
            >
              <div class="text-2xl font-bold text-primary-100">
                {siteConfig.projects.length}+
              </div>
              <div class="text-sm text-primary-300">Projects</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Tech Stack Visualizer -->
      <section class="space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Technology Ecosystem</h2>
          <p class="text-primary-300 max-w-2xl mx-auto">
            An interactive view of the technologies and tools I work with daily.
          </p>
        </div>
        <TechStackVisualizer />
      </section>

      <!-- Professional Experience -->
      <section class="space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Professional Journey</h2>
          <p class="text-primary-300 max-w-2xl mx-auto">
            My career progression and the impact I've made at each organization.
          </p>
        </div>
        <Experience />
      </section>

      <!-- Achievements -->
      <section class="space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Key Achievements</h2>
          <p class="text-primary-300 max-w-2xl mx-auto">
            Milestones that define my professional growth and expertise.
          </p>
        </div>
        <AchievementsSection achievements={siteConfig.achievements} />
      </section>

      <!-- Education & Background -->
      <section class="space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Education & Background</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div
            class="bg-lightercontentbackground border border-primary-600 rounded-xl p-6"
          >
            <h3 class="text-xl font-semibold mb-4">üéì Education</h3>
            <div class="space-y-2">
              <p class="font-medium">{education.degree}</p>
              <p class="text-primary-300">{education.institution}</p>
            </div>
          </div>
          <div
            class="bg-lightercontentbackground border border-primary-600 rounded-xl p-6"
          >
            <h3 class="text-xl font-semibold mb-4">üåç Languages</h3>
            <div class="space-y-2">
              {
                siteConfig.languages.map((language) => (
                  <div class="flex justify-between">
                    <span>{language.name}</span>
                    <span class="text-primary-300">{language.level}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </section>

      <!-- GitHub Activity -->
      <section class="space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Development Activity</h2>
          <p class="text-primary-300 max-w-2xl mx-auto">
            My coding activity and contributions to open source projects.
          </p>
        </div>
        <GitHubActivity />
      </section>

      <!-- Code Playground -->
      <section class="space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Interactive Code Examples</h2>
          <p class="text-primary-300 max-w-2xl mx-auto">
            Try out some code examples that showcase my programming style and
            expertise.
          </p>
        </div>
        <CodePlayground />
      </section>

      <!-- Personal Touch -->
      <section
        class="bg-lightercontentbackground border border-primary-600 rounded-xl p-8 text-center"
      >
        <h2 class="text-2xl font-bold mb-4">Beyond Code</h2>
        <p class="text-primary-300 max-w-2xl mx-auto mb-6">
          When I'm not coding, I enjoy exploring new technologies, contributing
          to open source projects, and sharing knowledge with the developer
          community. I believe in continuous learning and staying updated with
          the latest trends in software development.
        </p>
        <div class="flex justify-center space-x-8 text-4xl">
          <span title="Coffee enthusiast">‚òï</span>
          <span title="Tech explorer">üîç</span>
          <span title="Open source contributor">üåü</span>
          <span title="Knowledge sharer">üìö</span>
        </div>
      </section>
    </div>
  </main>
</Layout>
