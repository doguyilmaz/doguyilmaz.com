---
import Layout from "@layout/Layout.astro";
import { siteConfig } from "@config/site";

const { notFound } = siteConfig.pages;
---

<Layout
  pageTitle={notFound.title}
  description={notFound.description}
  type={notFound.type}
>
  <main
    class="flex flex-col justify-center items-center px-16 pt-40 mx-auto max-w-6xl text-center sm:pt-24 lg:px-24"
  >
    <div class="text-5xl font-extrabold">
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500"
      >
        404 Not Found
      </span>
    </div>
  </main>
</Layout>
