---
import ProjectsGrid from "@components/ProjectsGrid.astro";
import Layout from "@layout/Layout.astro";
import { siteConfig } from "@config/site";

const { projects } = siteConfig.pages;
const allProjects = siteConfig.projects;
const featuredProjects = allProjects.filter((project) => project.featured);
---

<Layout
  pageTitle={projects.title}
  description={projects.description}
  type={projects.type}
>
  <main class="px-8 pt-16 mx-auto max-w-6xl sm:pt-24 lg:px-16">
    <div class="flex flex-col mt-4 space-y-8">
      <div class="flex flex-col space-y-4">
        <h1
          class="text-4xl font-bold tracking-tighter sm:text-5xl max-w-[25ch]"
        >
          Featured Projects
        </h1>
        <p class="text-primary-300 max-w-[65ch]">
          A showcase of my most impactful projects, ranging from data
          visualization platforms to mobile applications and full-stack
          solutions.
        </p>
      </div>

      <section class="space-y-8">
        <h2 class="text-2xl font-bold">Featured Work</h2>
        <ProjectsGrid projects={featuredProjects} />
      </section>

      <section class="space-y-8">
        <h2 class="text-2xl font-bold">All Projects</h2>
        <ProjectsGrid projects={allProjects} />
      </section>
    </div>
  </main>
</Layout>
