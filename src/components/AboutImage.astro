---
import { siteConfig } from "@config/site";
import BackgroundPatterns from "./BackgroundPatterns.astro";

const { about } = siteConfig;
const pattern = Astro.url.searchParams.get("pattern") || "dots";
---

<div class="pt-8 pb-8 min-h-screen flex items-center justify-center px-1 sm:px-4">
  <div class="w-full max-w-6xl">
    <div class="flex flex-col lg:grid lg:grid-cols-12 lg:gap-8 lg:items-center space-y-3 lg:space-y-0">
      <div class="lg:col-span-4 flex justify-center order-1 lg:order-1">
        <div class="w-40 sm:w-48 lg:w-full lg:max-w-sm">
          <img
            width={720}
            height={960}
            class="relative z-20 object-cover object-center w-full rounded-3xl shadow-2xl -rotate-3 aspect-[1/1]"
            src="/images/personal/about.jpeg"
            alt={`Image of ${siteConfig.siteName}`}
            loading="lazy"
            decoding="async"
          />
        </div>
      </div>

      <div class="relative rounded-3xl lg:col-span-8 backdrop-blur-sm bg-contentbackground/30 p-2 sm:p-4 lg:p-8 xl:p-12 order-2 lg:order-2">
        <BackgroundPatterns selectedPattern={pattern} />

        <div class="relative z-20 space-y-4 sm:space-y-6">
          <h2
            class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold tracking-tighter text-center lg:text-left leading-tight"
            id="about-heading"
          >
            {about.content.heading}
          </h2>
          <div class="text-sm sm:text-base lg:text-lg text-primary-300 md:text-primary-100 text-center lg:text-left leading-relaxed">
            {
              about.content.paragraphs.map((paragraph) => (
                <p class="mb-3 sm:mb-4">{paragraph}</p>
              ))
            }
          </div>
          <div class="pt-2 text-center lg:text-left">
            <a
              href="/#contact"
              class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-lg transition-all bg-accent-500/30 hover:bg-accent-500/50 text-primary-300"
            >
              Contact Me
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
