---
import { getNavigation } from "@config/site";
const navigation = getNavigation();
---

<div
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  id="navbar-container"
>
  <nav
    class="mx-auto max-w-6xl backdrop-blur-md bg-contentbackground/30 border-b border-primary-800/20"
  >
    <ul class="flex flex-row justify-center items-center gap-2 px-4 py-2">
      {
        navigation.map((item) => (
          <li>
            <a
              rel="prefetch"
              class:list={[
                "relative block px-4 py-2 font-medium tracking-tight transition-all duration-300 rounded-lg hover:bg-accent-400/5",
                Astro.url.pathname === item.path
                  ? "text-accent-400 bg-accent-400/10"
                  : "text-primary-200 hover:text-accent-400",
              ]}
              href={item.path}
            >
              <span class="relative z-10">{item.label}</span>
              {Astro.url.pathname === item.path && (
                <div class="absolute inset-0 rounded-lg bg-accent-400/5" />
              )}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<script>
  let prevScrollPos = window.pageYOffset;
  let navbar = document.getElementById("navbar-container");

  window.onscroll = () => {
    let currentScrollPos = window.pageYOffset;

    if (!navbar) return;

    if (currentScrollPos < 50) {
      navbar.style.top = "0";
      return;
    }

    if (prevScrollPos > currentScrollPos) {
      navbar.style.top = "0";
    } else {
      navbar.style.top = "-5rem";
    }

    prevScrollPos = currentScrollPos;
  };
</script>
