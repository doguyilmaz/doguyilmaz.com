---
import SocialMediaIcons from "./SocialMediaIcons.astro";
import { siteConfig } from "@config/site";

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="relative overflow-hidden">
    {/* Glass morphism content */}
    <div class="relative z-10 w-full backdrop-blur-sm bg-contentbackground/30">
      <div class="py-4 border-t border-primary-800/30">
        <div class="max-w-[90rem] mx-auto px-8">
          <div class="flex flex-col gap-6">
            {/* Email and Social Links */}
            <div
              class="flex flex-col-reverse gap-6 sm:flex-row sm:gap-0 justify-between items-center"
            >
              <a
                href={`mailto:${siteConfig.footer.email}`}
                class="text-sm text-primary-200 hover:text-accent-400 transition-colors duration-300"
              >
                {siteConfig.footer.email}
              </a>
              <SocialMediaIcons
                containerClass="flex gap-6"
                class="w-6 h-6 hover:cursor-pointer stroke-[1.5] stroke-primary-300 hover:stroke-accent-400 transition-all duration-300 hover:scale-110"
              />
            </div>

            {/* Copyright */}
            <div
              class="flex justify-center border-t border-primary-800/30 pt-0 sm:border-0 sm:pt-0"
            >
              <p class="text-sm text-primary-400">
                ©️ {currentYear}
                {siteConfig.footer.copyright}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
