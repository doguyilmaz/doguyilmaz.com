---
interface Achievement {
  title: string;
  description: string;
  date: string;
  icon?: string;
}

interface Props {
  achievements: readonly Achievement[];
}

const { achievements } = Astro.props;
---

<section class="space-y-6">
  <h2 class="text-3xl font-bold">Key Achievements</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      achievements.map((achievement) => (
        <div class="bg-lightercontentbackground border border-primary-600 rounded-lg p-6 hover:border-primary-400 transition-colors">
          <div class="flex items-start space-x-4">
            {achievement.icon && (
              <div class="text-2xl flex-shrink-0">{achievement.icon}</div>
            )}
            <div class="flex-1">
              <h3 class="text-xl font-semibold mb-2">{achievement.title}</h3>
              <p class="text-primary-300 mb-3">{achievement.description}</p>
              <span class="text-sm text-primary-400 font-medium">
                {achievement.date}
              </span>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
