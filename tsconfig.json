{
  "extends": "astro/tsconfigs/strict",

  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@layout/*": ["src/layout/*"],
      "@components/*": ["src/components/*"],
      "@images/*": ["public/images/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"]
    }
  }
}
